<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_chat_channel">

    <TextView
        android:id="@+id/tv_chat_channel_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_alignBottom="@+id/iw_chat_channel_picture"
        android:layout_toEndOf="@+id/iw_chat_channel_picture"
        android:layout_marginBottom="11dp"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iw_chat_channel_picture"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="7dp"
        app:srcCompat="@drawable/user"/>

</RelativeLayout>