<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/user_header"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:scaleType="centerCrop"
    android:background="@drawable/b7">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_xxxlarge"
        android:layout_centerHorizontal="true"
        android:id="@+id/relativeLayout">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iw_profile_photo"
            android:layout_width="@dimen/profile_photo_large_size"
            android:layout_height="@dimen/profile_photo_large_size"
            android:layout_centerHorizontal="true"
            android:src="@drawable/user"
            app:civ_border_color="@color/colorWhite"
            app:civ_border_width="1dp" />

        <LinearLayout
            android:id="@+id/user_properties"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_below="@id/iw_profile_photo"
            android:orientation="vertical">


        </LinearLayout>


    </RelativeLayout>

    <TextView
        android:id="@+id/tw_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:text="@string/username"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="@color/colorWhite"
        android:layout_below="@+id/relativeLayout"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>